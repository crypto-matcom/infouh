  :latlng => [51.52238797921441, -0.08366235665359283],
  :zoom => 18
}) %>

<script type="text/javascript">

		var marker = L.AwesomeMarkers.icon({
      prefix: 'prefix',
		  icon: 'knight',
		  markerColor: 'red'
		});

