<%= form_for @source, :html => { :class => "form-horizontal source" } do |f| %>

  <% if @source.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@source.errors.count, "error") %> prohibited this source from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @source.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:host) %>
  </div>
  <div class="form-group">
    <%= f.label :adapter, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <select class="form-control custom-select" name="source[adapter]">
        <option value="sqlite3">SQLite3</option>
        <option value="mysql2">MySQL</option>
        <option value="postgresql">PostgreSQL</option>
      </select>
    </div>
    <%=f.error_span(:adapter) %>
  </div>
  <div class="form-group">
    <%= f.label :database, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :database, :class => 'form-control' %>
    </div>
    <%=f.error_span(:database) %>
  </div>
  <div class="form-group">
    <%= f.label :host, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :host, :class => 'form-control' %>
    </div>
    <%=f.error_span(:host) %>
  </div>

  <div class="ui accordion">
    <div class="title">
      <div class="form-group">
        <i class="dropdown icon col-lg-1"></i>
        <label class="control-label col-lg-2">Authentication</label>
      </div>
    </div>
    <div class="content">
      <div class="form-group">
        <%= f.label :username, :class => 'control-label col-lg-2' %>
        <div class="col-lg-10">
          <%= f.text_field :username, :class => 'form-control' %>
        </div>
        <%=f.error_span(:username) %>
      </div>
      <div class="form-group">
        <%= f.label :password, :class => 'control-label col-lg-2' %>
        <div class="col-lg-10">
          <%= f.password_field :password, :class => 'form-control' %>
        </div>
        <%=f.error_span(:password) %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                sources_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>

<script type="text/javascript">
  $('.ui.accordion').accordion();
</script>
