<%= form_for @consult, :html => { :class => "form-horizontal consult" } do |f| %>

  <% if @consult.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@consult.errors.count, "error") %> prohibited this consult from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @consult.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :code, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :code, :class => 'form-control' %>
    </div>
    <%=f.error_span(:code) %>
  </div>
  <div class="form-group">
    <%= f.label :marker_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :marker_id, Marker.all.map{|e| [e.name, e.id] },{}, :class => 'form-control' %>
    </div>
    <%=f.error_span(:marker_id) %>
  </div>

  <div class="form-group">
    <%= f.label :source_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :source_id, Source.all.map{|e| [e.name, e.id] },{}, :class => 'form-control' %>
    </div>
    <%=f.error_span(:source_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                consults_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
